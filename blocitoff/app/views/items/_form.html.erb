<%= form_for [@user, Item.new] do |f| %>
  <h3>Add an item</h3>
  <div class="form-group">
    <%= f.label :name %>
    <%= f.text_area :name, rows: 8, class: 'form-control', placeholder: "Enter item" %>
  </div>
  <div class="form-group">
    <%= f.submit "Create Item", class: 'btn btn-default' %>
  </div>
<% end %>