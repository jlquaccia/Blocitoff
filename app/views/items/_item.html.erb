<div class="mobile_task_list">
  <div class="row">
    <div class="col-md-12">
      <%= content_tag :div, class: 'list_item_styles', id: item.id do %>
        <small id="box">
          <div class="item_name"><%= item.name %></div>
          <span class="right">
            <%= link_to "", [@user, item], method: :delete, class: 'fa fa-times checks mobile_checks', remote: true %>
          </span>
          <div id="overlay">
            <span id="countdown"><%= "#{pluralize(item.days_left, 'day')} remaining" %></span>
            <span class="right">
              <%= link_to "", [@user, item], method: :delete, class: 'fa fa-check overlay_checks', remote: true %>
            </span>
          </div>
        </small>
        <hr class="skinny">
      <% end %>
    </div>
  </div>
</div>